.product-collage {
  /* padding: 20rpx; *//* margin-left: 10rpx; */
  padding: 0rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(to right, #ff002f, #ff0036); /* 标准的语法（必须放在最后） *//* background: radial-gradient(to right,#fff,f0036); */
}

.product-collage label {
  /* display: inline-block; */
  margin-right: 0rpx;
  margin-left: auto;
  font-size: 30rpx;
}

.product-info {
  width: 100%;
  background: #fff;
}

.product-info-title {
  /* margin-left: 20rpx; */
  padding: 20rpx;
  font-size: 40rpx;
  /* height: 50rpx;
  line-height: 50rpx; *//* white-space: ; */
}

.product-info-price {
  height: 50rpx;
  line-height: 50rpx;
  margin: 10rpx 0rpx 10rpx 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.product-info-collage {
  /* padding: 10rpx;  */
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  height: 35rpx;
  background: #ff0036;
  font-size: 28rpx;
  color: #fff;
  margin-right: 15rpx;
}

.product-info-originprice {
  text-decoration: line-through;
  color: #999;
  font-size: 25rpx;
