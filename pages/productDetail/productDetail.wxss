  height: 100%;
  width: 100%;
  /* height: 80rpx;
  width: 710rpx; *//* display: flex; */
}

.joiner image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0rpx 10rpx 0rpx 0rpx;
}

.weui-tab {
  background: #fff;
  height: auto;
  width: 100%;
  margin-bottom: 200rpx;
}

.weui-navbar__slider {
  /* background-color: #ff0036; */
}

.product-comment {
  width: 100%;
  border-bottom: 1rpx solid #eee;
}

.product-comment-sum {
  height: 80rpx;
  width: auto;
  line-height: 80rpx;
  font-size: 40rpx;
  margin-left: 20rpx;
  margin-right: 0rpx;
  padding: 15rpx 0rpx;
  border-bottom: 1rpx solid #eee;
}

.product-comment-bar {
  width: 100%;
  /* height: 80rpx; */
}

.product-comment-bar-item {
  display: inline-block;
  width: 25%;
  text-align: center;
  margin: 20rpx 0rpx;
  /* padding: 10; */
}

.product-comment-bar-item label {
  width: 100rpx;
  height: 60rpx;
  border-radius: 10rpx;
  background: #ccc;
  padding: 10rpx;
  color: #fff;
}

.product-comment-bar-item label.active {
  background: #a3d95b;
}

.product-comment-item {
  /* width: 100%; */
  padding: 20rpx 0rpx;
  margin-left: 20rpx;
  margin-right: 0rpx;
  border-bottom: 1rpx solid #eee;
}

.product-comment-item-info {
  display: flex;
  width: 100%;
  font-size: 30rpx;
  height: 42rpx;
  line-height: 42rpx;
}

.product-comment-item-info .star {
  width: 32rpx;
  height: 32rpx;
  margin: 5rpx;
}

.product-comment-item-content {
  font-size: 30rpx;
  margin-right: 20rpx;
}

.product-comment-item-content-image {
  display: inline-block;
  width: 130rpx;
  height: 130rpx;
  margin: 10rpx;
}

.product-detail-bar {
  width: 100%;
  margin-bottom: 40rpx;
}

.product-detail-bar-item {
  display: inline-block;
  width: 250rpx;
  text-align: center;
  font-size: 40rpx;
}

.product-detail-bar-item.active {
  background: #fff;
  color: #a3d95b;
}

.product-intruduce {
  width: 100%;
}

.product-format {
  width: 100%;
  /* padding: 30rpx */
}

.product-shouhou {
  width: 100%;
}

.product-format-table {
  margin: 30rpx;
  width: 690rpx;
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
  display: flex;
  flex-wrap: wrap;
}

.product-format-table .td {
  /* flex: 1; *//* display: inline-block;  */
  width: 343rpx;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  min-height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  word-wrap:break-word; 
  word-break:break-all;
  /* white-space: pre-wrap; */
}
.mask{
  background: rgba(0, 0, 0, .5);
  position: fixed;
  width: 100%;
  height: 100%;
  top:0rpx;
  left: 0rpx;
  z-index: 1000;
}
@keyframes in{
  0%{
   top: 100%;
  }
  100%{
    top: 50%;
  }
}
.popup{
  position: absolute;
  top:auto;
  bottom:0rpx;
  width: 100%;
  /* margin-bottom: 0rpx;
  margin-top:auto; */
  background: #fff;
  animation: in 300ms ease 0ms forwards;
}
.popup-product{
  padding: 10rpx;
  height: 200rpx;
  width: 100%;
  display: flex;
}
.popup-product image{
  height: 180rpx;
  width: 180rpx;
}
.popup-product-name{
  font-size: 35rpx;
  word-break: break-all;
  word-wrap: break-word;
  margin: 0rpx 20rpx;
}
.popup-product-sale{
  position: absolute; 
  height: 60rpx;
  top: 120rpx;
  padding:20rpx;
}
.popup-skus{
  /* width: 100%; */
  padding: 30rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}
.popup-sku{
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  border:1rpx solid #999;
  text-align: center;
  margin: 10rpx; 
}
.popup-sku.active{
  background: #999;
  color:#fff;
}
.popup-bar{
  padding: 20rpx;
  display: flex;
}
.popup-bar button{
background: #fff;
 border:1rpx solid #ff0036;
 color: #ff0036;
}


