}

.product-saleinfo {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 30rpx;
  text-align: center;
  padding: 10rpx 0rpx;
  border-bottom: 1rpx solid #eee;
}

.product-saleinfo label {
  flex: 1;
}

.product-collage-info {
  background: #fff;
  /* width: 100%; */
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.product-collage-info-title {
  font-size: 30rpx;
  /* margin-left: 20rpx; */
