/* pages/classify/classify.wxss */
/**分类栏**/
.category{
  /* margin-top:100rpx; */
  background: #e6e6e6;
}
.category .top{
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width:100%;
  height: 100rpx;
  z-index: 99;
}
.category .bottom{
  position: fixed;
  top: 100rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background: #e6e6e6;
   /* margin-top:100rpx;  */

}

.nagivate {
  height: 80rpx;
  width: 750rpx;
}
.nagivate .item{
flex: 1;
/* padding: 5rpx; */
min-width: 150rpx;
height: 80rpx;
line-height: 80rpx;
}
.nagivate .item .item_detail{
  border-radius: 10rpx;
  text-align: center;
  margin: 5rpx;
  height: 70rpx;
  line-height: 70rpx;

}
.select{
  background: #ff6666;
  color:#fff;
}
.noselect{
background: #e6e6e6;
}


/*隐藏滚动条  */
::-webkit-scrollbar{
width: 0rpx;
height: 0rpx;
color: rgba(0, 0, 0, 0);
}

.left-navbar{
  position:absolute;
  left:0;
  width:150rpx;
  height:90%;
  background-color:#eee;
  font-size:15px;
}
.left-navbar view{
  height:80rpx;
  line-height: 80rpx;
  text-align:center;
  animation: in 500ms ease 0ms forwards;
}
.active{
  background-color:#FFF;
  /* color:#ff0036; */
  color:#a3d95b;
  font-size:17px;
}
#right{
  position:absolute;
  right:0;
  width:600rpx;
  height:90%;
}
.product-container{
  display: flex;
  flex-wrap: wrap;
  width: 600rpx;
  height: 300rpx;
}
.product-container .item{
  width: 290rpx;
  height: 320rpx;
  background: #fff;
  margin: 5rpx;
  animation: in 500ms ease 0ms forwards;
}
.product-container .item .product{
  width: 280rpx;
  height: 300rpx;
  margin: 10rpx;
  
}
.product image{
  width: 270rpx;
  height: 190rpx;
}
.product-title{
  height: 35rpx;
  line-height: 35rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 30rpx;
}
.product-price{
  height: 25rpx;
  line-height: 25rpx;
  font-size: 25rpx;
  color: #ff6666;
  margin-top: 7rpx;
}
.product-originprice{
  color: #888;
  /* margin-left: 30rpx; */
  text-decoration: line-through;
}
.product-sale{
  color: #888;
  height: 25rpx;
  line-height: 25rpx;
  font-size: 25rpx;
  margin-top: 7rpx;
}
