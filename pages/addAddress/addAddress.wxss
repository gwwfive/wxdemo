/* pages/addAddress/addAddress.wxss */

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: rgba(0,0,0,0.5);
  top:0%;
  left: 0%;
  /* background: #eee; */
  z-index: 98;
}
@keyframes in{
  0% {
    transform: scale(0);
    opacity: 0
  }
 
  100%{
    transform: scale(1);
    opacity: 1;
  }
}
.address-picker{
  position: fixed;
  top: 0rpx;
  bottom:0rpx;
  left: 0rpx;
  right: 0rpx;
  margin: auto;
  width: 95%;
  background: #fff;
  height: 300rpx;
  border-radius: 10rpx;
  animation: in 500ms ease 0ms forwards;
  z-index: 99;
}
.picker-item{
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
}
