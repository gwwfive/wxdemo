/* pages/goodCollection/goodCollection.wxss */
page{
  background: #eee;

}
.card{
  margin: 20rpx;
  background: #fff;
  position: relative;
}
.mask{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background: #999;
  opacity: 0.8;
  text-align: center;
  color: #fff;
  display: flex;
  align-items: center;
  z-index: 2;
}
.card image{
  width: 100%;
  height: 400rpx;
  z-index: 1;
}
.card .detail{
  padding: 20rpx;
  z-index: 1;
}
.nocollect{
  position: fixed;
  /* width: 100%; */
  padding: 20rpx;
  text-align: center;
  height: 200rpx;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  margin: auto;
}