.order{
  width: 100%;
  height: 100%;

}
@keyframes opacity{
  0%{
    opacity: 0
  }
  100%{
    opacity: 1
  }
}

.order-empty{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  animation: opacity 500ms 0ms forwards;
}
.order-empty image{
  width: 200rpx;
  height: 200rpx;

}
.order-empty text{
  font-size: 30rpx;
  height: 70rx;
  width: 100%;
  color: #999;
  text-align: center;
}
.order-list{
  height: 100%;
  width: 100%;
    background: #eee;
}

.order-item{
  width:100%;
  background: #fff;
  /* height: 250rpx; */
  margin-bottom: 40rpx;
  animation: in 500ms ease 0ms forwards;
}
.order-no{
  /* width: 100%; */
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #999;
  border-bottom: 1rpx solid #eee;
  /* padding-left: 20rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
}
.order-bar{
  height:120rpx;
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #eee;
  align-items: center;
}
.order-price{
  padding-left: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 30rpx;
}
.order-status{
  padding-left: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 30rpx;
}
.order-bar button{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 35rpx;
  text-align: center;
  margin-right:20rpx;margin-left:auto;
  border: none;
}
.order-product{
  height: 200rpx;
   width: 100%; 
  display: flex;
   /* padding: 20rpx;  */
}
.order-product image{
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
}
.order-detail{
  margin: 20rpx;
  height: 160rpx;
  /* margin-left: 30rpx; */
}
.order-product-name{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #000;
}
.order-product-skuname{
height: 60rpx;
line-height: 60rpx;
font-size: 35rpx;
color: #515151;
white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-product-skunum{
  height: 35rpx;
  font-size: 30rpx;
  line-height: 35rpx;
  color:#999;
}