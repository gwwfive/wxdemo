.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.clear{
  display: flex;
  flex-direction: column;
  height:10rpx;
  background: #F2F2F2;
}
.g-flex{display:-webkit-box;display: -webkit-flex;display: flex;}
.g-flex-item {-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;}
@keyframes in{
  0%{
    transform: scale(0);
    opacity: 0;
  }
  100%{
    transform: scale(1);
    opacity: 1;
  }
}
@keyframes growth{
  0%{
    width: 0%;
  }
  100%{
    width: 100%;
  }
}
.movein{
  animation: in 500ms ease 200ms forwards;
}
